{
  "name": "omnixys-authentication-service",
  "version": "1.0.0",
  "description": "Omnixys Authentication Service â€“ zentrale Authentifizierungs- und Autorisierungskomponente (Keycloak, JWT, SSO).",
  "author": {
    "name": "Caleb Gyamfi",
    "email": "caleb@omnixys.com",
    "url": "https://omnixys.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/omnixys/omnixys-authentication-service.git"
  },
  "bugs": {
    "url": "https://github.com/omnixys/omnixys-authentication-service/issues"
  },
  "homepage": "https://omnixys.com",
  "license": "GPL-3.0-or-later",
  "type": "module",
  "private": false,
  "engines": {
    "node": ">=24.10.0",
    "pnpm": ">=10.19.0"
  },
  "scripts": {
    "clean": "rm -rf dist tsconfig.build.tsbuildinfo",
    "build": "pnpm run clean && nest build",
    "format": "prettier --cache --write \"src/**/*.{ts,js,json,prisma,md,yaml}\"",
    "format:test": "prettier --cache --write \"src/**/*.{ts,js,json,prisma,md,yaml}\" \"__tests__/**/*.ts\"",
    "format:check": "prettier --cache --check \"src/**/*.{ts,js,json,prisma,md,yaml,yml}\" \"__test__/**/*.ts\"",
    "start": "pnpm nest start",
    "start:dev": "pnpm run clean && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --config ./jest-e2e.json --maxWorkers=4 --coverage",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e:debug": "NODE_OPTIONS='--experimental-vm-modules' jest --runInBand --detectOpenHandles --config ./__tests__/jest-e2e.json",
    "test:e2e2": "jest --config ./__tests__/jest-e2e.json",
    "test:e2e": "NODE_OPTIONS='--experimental-vm-modules' jest --config ./__tests__/e2e/jest-e2e.json --passWithNoTests",
    "typedoc": "typedoc",
    "depcheck": "depcheck",
    "test:login": "pnpm test -- __tests__/e2e/authentication/authentication.login.e2e-spec.ts",
    "test:signup": "pnpm test -- __tests__/e2e/authentication/authentication.signup.e2e-spec.ts",
    "test:user": "pnpm test -- __tests__/e2e/authentication/authentication.user.e2e-spec.ts",
    "test:admin": "pnpm test -- __tests__/e2e/authentication/authentication.admin.e2e-spec.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "chalk": "^5.6.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@tsconfig/node23": "^23.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-sort-imports": "^1.8.8",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
