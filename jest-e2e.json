{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "extensionsToTreatAsEsm": [".ts"],
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "useESM": true,
        "tsconfig": "__tests__/e2e/tsconfig.spec.json"
      },
      "babel-jest",
      {
        "presets": [
          ["@babel/preset-env", { "targets": { "node": "current" } }]
        ],
        "plugins": ["babel-plugin-istanbul"]
      }
    ]
  },
  "moduleFileExtensions": ["ts", "js", "json"],
  "testRegex": ".e2e-spec.ts$",
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "transformIgnorePatterns": ["node_modules/(?!(\\@nestjs|rxjs)/)"],

  "detectOpenHandles": true,
  "forceExit": true,
  "verbose": true,
  "maxWorkers": 1,
  "testTimeout": 60000,
  "globals": {
    "ts-jest": {
      "diagnostics": {
        "warnOnly": true
      }
    }
  },
  "setupFilesAfterEnv": ["<rootDir>/__tests__/e2e/setup-e2e.ts"],
  "testEnvironmentOptions": {
    "url": "http://localhost/"
  },
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/main.ts",
    "!src/**/*.module.ts",
    "!**/node_modules/**",
    "!**/dist/**"
  ],
  "coverageDirectory": "./__tests__/reports/e2e/coverage",
  "coverageReporters": ["text-summary", "lcov", "html"],
  "coverageProvider": "babel",

  "reporters": [
    "default",
    [
      "jest-junit",
      {
        "outputDirectory": "__tests__/reports/e2e/junit",
        "outputName": "junit-results.xml",
        "suiteName": "E2E Authentication Tests"
      }
    ]
  ]
}
